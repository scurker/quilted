{
  "name": "quilted",
  "version": "1.0.1",
  "description": "A css/js coverage tool for websites.",
  "module": "dist/quilted.es.js",
  "main": "dist/quilted.js",
  "scripts": {
    "build": "npm-run-all clean transpile",
    "clean": "rm -rf dist/ bin/",
    "coverage": "BABEL_ENV=test nyc ava ./test/",
    "coverage:report": "nyc report --reporter=text-lcov | coveralls",
    "coverage:html": "nyc report --reporter=html",
    "lint": "eslint .",
    "prepublish": "npm run build",
    "test": "BABEL_ENV=test ava test/*.js",
    "transpile": "rollup -c rollup.config.js"
  },
  "bin": {
    "quilted": "bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "author": "Jason Wilson <jason@scurker.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scurker/quilted"
  },
  "bugs": {
    "url": "https://github.com/scurker/quilted/issues"
  },
  "keywords": [
    "code coverage",
    "coverage",
    "css coverage",
    "js coverage",
    "css code coverage",
    "js code coverage"
  ],
  "dependencies": {
    "chalk": "^2.4.1",
    "columnify": "^1.5.4",
    "pretty-bytes": "^5.1.0",
    "puppeteer": "^1.6.0",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@scurker/eslint-config": "^1.1.2",
    "ava": "^0.25.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.1.0",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "rollup": "^1.27.1",
    "rollup-plugin-babel": "^3.0.7",
    "strip-ansi": "^4.0.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  },
  "yargs": {
    "boolean-negation": false
  }
}
